<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<section class="search-form">
  <%= form_for :genre, method: :get do |f| %>
      <div class="input-group input-group-lg">
        <%= label_tag :keywords, nil, class: "sr-only" %>
        <%= text_field_tag :keywords, nil,
                           placeholder: "Genrename",
                           class: "form-control input-lg" %>
        <span class="input-group-btn">
<%= submit_tag "Find Genre",
               class: "btn btn-primary btn-lg" %>
</span>
      </div>
  <% end %>

</section>
<br>
<section class="search-result">
  <table class="table table-dark">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>

<br>

<%= link_to 'New Genre', new_genre_path %>
