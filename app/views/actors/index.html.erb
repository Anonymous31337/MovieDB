<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<section class="search-form">
  <%= form_for :actors, method: :get do |f| %>
      <div class="input-group input-group-lg">
        <%= label_tag :keywords, nil, class: "sr-only" %>
        <%= text_field_tag :keywords, nil,
                           placeholder: "first name or last name of actor ",
                           class: "form-control input-lg" %>
        <span class="input-group-btn">
<%= submit_tag "Find Actors",
               class: "btn btn-primary btn-lg" %>
</span>
      </div>
  <% end %>
</section>

<section class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <table class="table table-dark">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Working country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.fname %></td>
        <td><%= actor.name %></td>
        <td><%= actor.birthdate %></td>
        <td><%= actor.workingcountry %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>

<br>

<%= link_to 'New Actor', new_actor_path %>
