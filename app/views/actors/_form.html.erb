<%= form_with(model: actor, local: true) do |form| %>
  <% if actor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>

      <ul>
      <% actor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :actor_name %>
  </div>

  <div class="field">
    <%= form.label :fname %>
    <%= form.text_field :fname, id: :actor_fname %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, start_year: Date.today.year - 110, end_year: Date.today.year, id: :actor_birthdate %>
  </div>

  <div class="field">
    <%= form.label :workingcountry %>
    <%= form.text_field :workingcountry, id: :actor_workingcountry %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
